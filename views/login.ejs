<div class="container-fluid d-flex align-items-center justify-content-center min-vh-100 bg-dark">
  <div class="row w-100 justify-content-center">
    <div class="col-lg-5 col-md-7 col-sm-9">
      <div class="card border-0 shadow-lg overflow-hidden">
        <!-- Card Header -->
        <div class="card-header bg-primary text-white py-4">
          <div class="d-flex justify-content-center align-items-center">
            <i class="fas fa-sign-in-alt fa-2x me-3"></i>
            <h3 class="mb-0">WELCOME BACK</h3>
          </div>
        </div>
        
        <!-- Card Body -->
        <div class="card-body p-5">
          <%- include ("./partials/messages"); %>
          
          <form action="/users/login" method="POST" class="needs-validation" novalidate>
            <!-- Email Field -->
            <div class="mb-4">
              <label for="email" class="form-label fw-bold">Email Address</label>
              <div class="input-group">
                <span class="input-group-text bg-light"><i class="fas fa-envelope text-primary"></i></span>
                <input type="email" id="email" name="email" 
                       class="form-control form-control-lg" 
                       placeholder="your@email.com" required>
              </div>
              <div class="invalid-feedback">
                Please enter a valid email address.
              </div>
            </div>
            
            <!-- Password Field -->
            <div class="mb-4">
              <label for="password" class="form-label fw-bold">Password</label>
              <div class="input-group">
                <span class="input-group-text bg-light"><i class="fas fa-lock text-primary"></i></span>
                <input type="password" id="password" name="password" 
                       class="form-control form-control-lg" 
                       placeholder="Enter password" required>
                <button class="btn btn-outline-secondary toggle-password" type="button">
                  <i class="fas fa-eye"></i>
                </button>
              </div>
              <div class="invalid-feedback">
                Please enter your password.
              </div>
              <div class="text-end mt-2">
                <a href="/users/forgot-password" class="text-decoration-none small text-primary">
                  Forgot Password?
                </a>
              </div>
            </div>
            
            <!-- Submit Button -->
            <div class="d-grid mt-4">
              <button type="submit" class="btn btn-primary btn-lg py-3 fw-bold">
                <i class="fas fa-sign-in-alt me-2"></i> LOGIN
              </button>
            </div>
            
            <!-- Social Login (Optional) -->
            <% 
              const hasGoogle = process.env.GOOGLE_CLIENT_ID && !process.env.GOOGLE_CLIENT_ID.includes('placeholder');
              const hasFacebook = process.env.FACEBOOK_APP_ID && !process.env.FACEBOOK_APP_ID.includes('placeholder');
              const hasTwitter = process.env.TWITTER_CONSUMER_KEY && !process.env.TWITTER_CONSUMER_KEY.includes('placeholder');
              const hasOAuth = hasGoogle || hasFacebook || hasTwitter;
            %>
            <% if (hasOAuth) { %>
            <div class="text-center my-4">
              <div class="position-relative">
                <hr>
                <span class="position-absolute top-50 start-50 translate-middle bg-white px-3 text-muted small">
                  OR CONTINUE WITH
                </span>
              </div>
              <div class="d-flex justify-content-center gap-3 mt-4">
                <% if (hasGoogle) { %>
                <a href="/users/auth/google" class="btn btn-outline-danger rounded-circle p-3" title="Login with Google">
                  <i class="fab fa-google"></i>
                </a>
                <% } %>
                <% if (hasFacebook) { %>
                <a href="/users/auth/facebook" class="btn btn-outline-primary rounded-circle p-3" title="Login with Facebook">
                  <i class="fab fa-facebook-f"></i>
                </a>
                <% } %>
                <% if (hasTwitter) { %>
                <a href="/users/auth/twitter" class="btn btn-outline-info rounded-circle p-3" title="Login with X (Twitter)">
                  <i class="fab fa-twitter"></i>
                </a>
                <% } %>
              </div>
            </div>
            <% } %>
          </form>
          
          <!-- Registration Link -->
          <div class="text-center mt-4 pt-3 border-top">
            <p class="mb-0">Don't have an account? 
              <a href="/users/register" class="text-primary fw-bold">Create one</a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<style>
  .min-vh-100 {
    min-height: 100vh;
  }
  
  .card {
    border-radius: 15px;
    overflow: hidden;
  }
  
  .form-control-lg {
    padding: 12px 15px;
  }
  
  .input-group-text {
    transition: all 0.3s ease;
  }
  
  .form-control:focus + .input-group-text {
    color: #0d6efd !important;
  }
  
  .toggle-password {
    cursor: pointer;
  }
  
  .btn-primary {
    background: linear-gradient(135deg, #3a7bd5, #00d2ff);
    border: none;
    transition: all 0.3s ease;
  }
  
  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  }
  
  .rounded-circle {
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
</style>

<script>
  // Password toggle functionality
  document.querySelectorAll('.toggle-password').forEach(button => {
    button.addEventListener('click', function() {
      const input = this.closest('.input-group').querySelector('input');
      const icon = this.querySelector('i');
      
      if (input.type === 'password') {
        input.type = 'text';
        icon.classList.replace('fa-eye', 'fa-eye-slash');
      } else {
        input.type = 'password';
        icon.classList.replace('fa-eye-slash', 'fa-eye');
      }
    });
  });
  
  // Form validation
  (function() {
    'use strict';
    window.addEventListener('load', function() {
      const forms = document.getElementsByClassName('needs-validation');
      Array.prototype.filter.call(forms, function(form) {
        form.addEventListener('submit', function(event) {
          if (form.checkValidity() === false) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add('was-validated');
        }, false);
      });
    }, false);
  })();
</script>