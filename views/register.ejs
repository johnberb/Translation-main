<div class="card bg-dark border-0">
    <h2 class="m-auto text-center text-warning">THE MESSAGE HUB</h2>
    <div class=" card card-body col-md-6 m-auto  rounded">
        <h2 class="text-center md-3 card-title fas fa-user-plus" >REGISTER
        </h2>
        <%- include ("./partials/messages"); %>
        <form action="/users/register" method="post">
            <div class="form-group">
                <label for="Name">Name</label>
                <input id="Name" class="form-control" type="name" name="name" placeholder="Enter full name"
                value="<%= typeof name != 'undefined' ? name : '' %>">
                
            </div>
            <div class="form-group ">
                <label for="email:">EMAIL</label>
                <input id="email:" class="form-control" type="email" name="email" placeholder="Enter email"
                value="<%= typeof email != 'undefined' ? email : '' %>">
            </div>
            <div class="form-group">
                <label for="Password">PASSWORD</label>
                <input id="Password" class="form-control" type="password" name="password" placeholder="Enter password"
                value="<%= typeof password != 'undefined' ? password : '' %>">
            </div>
            <div class="form-group">
                <label for="Password 2">CONFIRM PASSWORD</label>
                <input id="Password 2" class="form-control" type="password" name="password2" placeholder="Repeat password"
                value="<%= typeof password2 != 'undefined' ? password2 : '' %>">
            </div>
            <button type="submit" class="btn btn-outline-primary rounded mt-3 mb-2">REGISTER</button>
        </form>
        <a href="/users/login">Do you already have an account?</a>
        

    </div>
</div>
